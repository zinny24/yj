<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>게시판 목록</title>
    <link
      href="https://fonts.googleapis.com/css2?family=42Dot+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "42Dot Sans", sans-serif;
        margin: 0;
        padding: 0;
      }
      .wrapper {
        width: 100%;
        padding: 20px;
      }
      .table th {
        text-align: center;
        background-color: black;
        color: white;
      }
      .table td {
        text-align: center;
      }
      .form-inline {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-bottom: 20px;
      }
      .form-inline select,
      .form-inline input {
        margin-left: 10px;
      }
      .form-inline input {
        margin-right: 20px;
      }
      .table th,
      .table td {
        padding: 15px;
      }
      .btn-primary,
      .btn-danger {
        margin-right: 10px;
      }
      .pagination {
        justify-content: center;
        margin-top: 20px;
      }
      table {
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <h2 class="text-center">게시판 목록</h2>

      <div class="form-inline">
        <select class="form-control" style="width: 100px">
          <option>제목</option>
          <option>작성자</option>
        </select>
        <input
          type="text"
          class="form-control"
          style="width: 200px"
          placeholder="검색어 입력"
        />
        <button class="btn btn-primary">검색</button>
      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="width: 10%">번호</th>
            <th>제목</th>
            <th style="width: 10%">작성자</th>
            <th style="width: 10%">조회수</th>
            <th style="width: 10%">작성일</th>
            <th style="width: 10%">비고</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td><a href="view.html">제목 1</a></td>
            <td>작성자 1</td>
            <td>100</td>
            <td>2025-02-06</td>
            <td>
              <a href="edit.html" class="btn btn-primary btn-sm">수정</a>
              <a href="delete.html" class="btn btn-danger btn-sm">삭제</a>
            </td>
          </tr>
          <tr>
            <td>2</td>
            <td><a href="view.html">제목 2</a></td>
            <td>작성자 2</td>
            <td>200</td>
            <td>2025-02-06</td>
            <td>
              <a href="edit.html" class="btn btn-primary btn-sm">수정</a>
              <a href="delete.html" class="btn btn-danger btn-sm">삭제</a>
            </td>
          </tr>
          <!-- 더 많은 게시물 -->
        </tbody>
      </table>

      <!-- 페이지 네비게이션 -->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </body>
</html>
