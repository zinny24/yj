<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>댓글 프로그램</title>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fa;
            color: #333;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            font-size: 24px;
            color: #333;
            margin-top: 30px;
        }

        form {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        form label {
            font-size: 16px;
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
        form input, form textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0 20px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 14px;
        }
        form button {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        form button:hover {
            background-color: #0056b3;
        }

        #entries {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .entry {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
            margin-bottom: 15px;
        }
        .entry strong {
            font-size: 18px;
            color: #333;
        }
        .entry p {
            font-size: 14px;
            color: #666;
        }
        .delete-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            margin-top: 10px;
        }
        .delete-btn:hover {
            background-color: #c0392b;
        }

        @media (max-width: 768px) {
            form {
                margin: 20px;
            }
            #entries {
                margin: 10px;
            }
        }
    </style>
</head>
<body>

<form id="entryForm">
    <label for="name">이름:</label>
    <input type="text" id="writer" required>
    <label for="content">내용:</label>
    <textarea id="content" required></textarea>
    <button type="submit">등록</button>
</form>

<div id="entries"></div>

<script>

    //목록
    $(document).ready( function() {

        function loadEntries() {
            $.ajax( {
                url     : "/v2/comment/list",
                type    : "get",
                success : function( result ) {
                    let content = "";

                    result.forEach( r => {
                        content += `
                            <div class="entry" id="entry-${r.id}">
                                <strong>${r.writer}</strong><br>
                                <p>${r.content}</p>
                                <button class="delete-btn" data-id="${r.id}">삭제</button>
                            </div>
                        `;
                    } );


                    /* 일반 for
                    for(let i = 0; i < result.length; ++i) {
                        content += `
                            <div class="entry">
                                <strong>${result[i].writer}</strong><br>
                                <p>${result[i].content}</p>
                                <button class="delete-btn">삭제</button>
                            </div>
                        `;
                    }
                    */

                    $("#entries").html(content);

                },
                error   : function(err) {
                    console.log("에러 메시지 : ", err);
                }
            }  );
        }

        loadEntries();

        //저장
        $("#entryForm").submit(  function(e){
            e.preventDefault();

            let writer  = $("#writer").val();
            let content = $("#content").val();

            $.ajax({
                url         : "/v2/comment/save",
                type        : "post",
                contentType  : "application/json",
                data        : JSON.stringify( { writer, content } ),
                success     : function() {
                    loadEntries();
                    $("#writer").val("");
                    $("#content").val("");

                },
                error       : function(err) {
                    console.log("Error : ", err);
                }
            });

        }  );


        //삭제
        $(document).on("click", ".delete-btn", function() {
            let entryId = $(this).data("id");

            $.ajax( {
                url : `/v2/comment/delete/${entryId}`,
                type : "DELETE",
                success: function() {

                    $(`#entry-${entryId}`).remove();

                },
                error  : function(err) {
                    console.log("Error : ", err);
                }
            } );

        } );

    } );





</script>


</body>
</html>